letIABLES:              let
CONDITIONALS:           if / else
FUNCTION / OPERATIONS:  xxx()
JA / NEIN:              true / false

let water = 150
let beans = 50
let minWater = 100
let minBeans = 100

if (machine is plugged in?) then:

  if (machine turned on?) then:

    if (water > minWater) then:

      if (beans > minBeans) then:

        SUCCESS

      else:
          refillBeans()
    else:
      refillWater()
  else:
    turnOn()
else:
  plugIn()
